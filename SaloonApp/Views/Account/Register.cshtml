@model SaloonApp.DTOs.RegisterEntry
@{
    ViewData["Title"] = "Register";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Spectre sign up form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Register-LogIn.css">
    <link rel="stylesheet" href="~/css/login-register.css">
</head>
<body>

        <div class="container__child signup__form" style="font-size:large">
            <form method="post">
                <div class="form-group">
                    <label for="usernam">First Namee</label>
                    <input class="form-control" type="text" name="FirstName" id="FirstName" asp-for="FirstName" required style="background-color:#c7c6c6"/>
                </div>
                <div class="form-group">
                    <label for="username">Last Name</label>
                    <input class="form-control" type="text" name="LastName" id="LastName" asp-for="LastName" required style="background-color:#c7c6c6" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="text" name="email" id="email" asp-for="Email" required style="background-color:#c7c6c6" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required style="background-color:#c7c6c6" />
                </div>
                <div class="form-group">
                    <label for="passwordRepeat">Repeat Password</label>
                    <input class="form-control" type="password" name="passwordRepeat" id="passwordRepeat" asp-for="PasswordRepeat" required style="background-color:#c7c6c6" />
                </div>
                <div class="m-t-lg">
                    <ul class="list-inline">
                        <li>
                            <input class="btn btn--form" type="submit" value="Register" [disabled]="!reactiveForm.valid" />
                        </li>
                        <li>
                            <a class="signup__link" asp-action="Login">I am already a member</a>
                        </li>
                    </ul>
                </div>
            </form>
        </div>
</body>
</html>
