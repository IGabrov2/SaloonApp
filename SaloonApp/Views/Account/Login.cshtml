@model SaloonApp.DTOs.LoginEntry
@{
    ViewData["Title"] = "LogIn";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Spectre sign up form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Register-LogIn.css">

</head>
<body>
    <div class="container__child signup__form">
        <form method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="text" name="email" id="email" asp-for="Email" required style="background-color:#c7c6c6" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" required style="background-color:#c7c6c6" />
            </div>
            <div class="m-t-lg">
                <ul class="list-inline">
                    <li>
                        <input class="btn btn--form" type="submit" value="LogIn" [disabled]="!reactiveForm.valid" />
                    </li>
                    <li>
                        <a class="signup__link" asp-action="Register">Don't have an account sign up here!</a>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</body>
</html>
