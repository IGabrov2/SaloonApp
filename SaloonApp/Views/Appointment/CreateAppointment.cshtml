                @for (int i = 0; i < Model.Hours.Count; i++)
                {
                    <span class="btn" style="background-color:#222222; border-radius:20px; margin-bottom:5px;color:#fff">
                        @Html.RadioButtonFor(model => model.SelectedHour, Model.Hours[i] + " " + Model.Date.Date)
                        @Model.Hours[i]
                    </span>
                }

                <div class="checkbox">
                    <label>
                        <input asp-for="Male" /> @Html.DisplayNameFor(model => model.Male)
                    </label>
                </div>
            </div>

            @if (Model.UDFs.AppointmentUDFChek1Enabled)
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label style="margin-left:0px">
                            <input asp-for="@Model.AppointmentUDFs.AppointmentUDF1Checked" /> @Model.UDFs.AppointmentUDFChek1Label
