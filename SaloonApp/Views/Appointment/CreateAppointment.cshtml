@model SaloonApp.DTOs.CreateAppointmentEntry
@{
    ViewData["Title"] = "CreateAppointmentNew";
}

<h2>Create Appointment</h2>

<h4>@Model.Date.Day/@Model.Date.Month/@Model.Date.Year</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAppointmentFromUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
